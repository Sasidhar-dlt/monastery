.grid-container-extension {
    height100%;
    width:100%;
}

.grid-item-extension {
    background-color: var(--dialog-background, white);
    display: flex;
    justify-content: space-between;
    flex-flow: row;
    box-sizing: border-box;
}

::placeholder {opacity: 0.7;}

body {
    margin: 0%;
    display: inline-block;
    width: 100%;
}

.class-isrecurringneeded,  class-period{
    padding: 3px 25px 0px 11px;
}

input[type=text]#result {
    width: 100%;
    margin: 12px 20px 20px 2px;
    outline: none;
    padding: 6px;
    resize: none;
    border: none;
    border-radius: 4px;
    font-family: inherit;
}

.grid-item-extension > input, .grid-item-extension > input:focus {
    width: 100%;
    border-radius: 10px;
    border: 0.5px solid #98CCFD;
    outline: none;
    padding: 12px;
    resize: none;
    font-family: inherit;
    box-sizing: border-box;
}

::placeholder {opacity: 0.8;}


